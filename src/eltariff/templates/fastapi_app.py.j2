"""{{ company_name }} - Elnätstariff API

Genererat med Eltariff AI API (https://eltariff.sourceful.energy)
Följer RISE Eltariff API-standarden.
"""

import json
from datetime import datetime
from typing import Any
from uuid import UUID

from fastapi import FastAPI, HTTPException
from fastapi.middleware.cors import CORSMiddleware
from pydantic import BaseModel

app = FastAPI(
    title="{{ company_name }} - Elnätstariff API",
    description="API för elnätstariffer enligt RISE-standarden",
    version="0.1.0",
    docs_url="/swagger",
    redoc_url="/docs",
)

app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# Tariff data
TARIFFS_DATA = json.loads('''{{ tariffs_json }}''')


class InfoResponse(BaseModel):
    name: str
    apiVersion: str
    implementationVersion: str
    lastUpdated: datetime
    operator: str
    timeZone: str


@app.get("/gridtariff/v0/info", response_model=InfoResponse)
async def get_info():
    """Get API information."""
    return InfoResponse(
        name="{{ company_name }} Elnätstariff API",
        apiVersion="0.3.1",
        implementationVersion="0.1.0",
        lastUpdated=datetime.now(),
        operator="{{ company_name }}",
        timeZone="Europe/Stockholm",
    )


@app.get("/gridtariff/v0/tariffs")
async def get_tariffs() -> dict[str, Any]:
    """Get all tariffs."""
    return TARIFFS_DATA


@app.get("/gridtariff/v0/tariffs/{tariff_id}")
async def get_tariff(tariff_id: str) -> dict[str, Any]:
    """Get a specific tariff by ID."""
    for tariff in TARIFFS_DATA.get("tariffs", []):
        if tariff.get("id") == tariff_id:
            return {
                "tariff": tariff,
                "calendarPatterns": TARIFFS_DATA.get("calendarPatterns", []),
            }
    raise HTTPException(status_code=404, detail="Tariff not found")


@app.get("/")
async def root():
    """Root endpoint with API information."""
    return {
        "name": "{{ company_name }} Elnätstariff API",
        "description": "API för elnätstariffer enligt RISE-standarden",
        "version": "0.1.0",
        "documentation": "/swagger",
        "tariffs": "/gridtariff/v0/tariffs",
    }


if __name__ == "__main__":
    import uvicorn
    uvicorn.run(app, host="0.0.0.0", port=8000)
